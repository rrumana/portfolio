---
import '../styles/globals.css';

const {
  title = 'Ryan Rumana | Portfolio v2',
  description = 'Scaffolding layout for the portfolio redesign.',
  lang = 'en',
} = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <slot />
  </body>
</html>
