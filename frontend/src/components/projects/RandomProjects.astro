---
import SectionShell from '../layout/SectionShell.astro';
import SurfaceCard from '../ui/SurfaceCard.astro';

export interface Props {
  id?: string;
}

const props = Astro.props as Props;
const { id = 'random' } = props;
---
<SectionShell id={id} title="Grab Bag" description="Advent of Code sprints, homelab utilities, dotfiles, and whatever else I'm tinkering with." accent>
  <div class="grid">
    <SurfaceCard padding="lg" class="panel">
      <h3>Advent of Code 2024</h3>
      <p>
        Daily Rust solutions with perf notes and alternative approaches. The repo stays readable so others can riff on the patterns.
      </p>
      <a class="panel-link" href="https://github.com/rrumana/Advent_Of_Code_2024" target="_blank" rel="noopener noreferrer">View repository</a>
    </SurfaceCard>
    <SurfaceCard padding="lg" class="panel">
      <h3>Homelab + Automation</h3>
      <p>
        Shell scripts, observability glue, and bootstrap helpers that keep the k3s cluster healthy without manual toil.
      </p>
    </SurfaceCard>
    <SurfaceCard padding="lg" class="panel">
      <h3>Dotfiles & Editor Tweaks</h3>
      <p>
        Hyprland + Arch configs, Neovim experiments, and ergonomics changes that make my workstation feel consistent across machines.
      </p>
    </SurfaceCard>
  </div>
</SectionShell>

<style>
.grid {
  display: grid;
  gap: var(--space-xl);
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
}

.panel {
  display: grid;
  gap: var(--space-sm);
}

.panel-link {
  font-weight: 600;
  color: var(--color-primary-500);
  text-decoration: none;
}

.panel-link:hover,
.panel-link:focus-visible {
  text-decoration: underline;
}
</style>
