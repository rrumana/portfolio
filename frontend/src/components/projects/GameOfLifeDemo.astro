---
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import Button from '../ui/Button.astro';
---
<section class="gol-demo">
  <div class="gol-demo__media">
    <iframe
      src="/legacy/game_of_life.html"
      title="Game of Life demo"
      loading="lazy"
      class="gol-demo__frame"
    ></iframe>
  </div>
  <div class="gol-demo__content">
    <Heading level={2} size="2xl">Interactive playground</Heading>
    <Text>
      Draw patterns, simulate forwards or backwards, and export GIFs directly from the browser. The Rust engine and
      wasm-bindgen UI remain exactly as beforeâ€”now surfaced in the new layout.
    </Text>
    <Button href="/legacy/game_of_life.html" variant="secondary">Open in new tab</Button>
  </div>
</section>

<style>
.gol-demo {
  display: grid;
  gap: var(--space-xl);
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  align-items: stretch;
}

.gol-demo__media {
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1px solid rgba(17, 23, 42, 0.08);
  min-height: 420px;
}

.gol-demo__frame {
  width: 100%;
  height: 100%;
  border: none;
  background: var(--color-surface-100);
}

.gol-demo__content {
  display: grid;
  gap: var(--space-md);
}

html[data-theme='dark'] .gol-demo__media {
  border: 1px solid rgba(120, 132, 182, 0.35);
}
</style>
