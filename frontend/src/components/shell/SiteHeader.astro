---
import Container from './Container.astro';
import PrimaryNav from '../navigation/PrimaryNav.astro';
import ThemeToggle from '../ui/ThemeToggle.astro';
import { siteConfig } from '../../site.config';

export interface Props {
  navLinks?: { href: string; label: string }[];
}

const props = Astro.props as Props;

const { navLinks = [] } = props;
const brandLabel = siteConfig.name;
---
<header class="site-header">
  <Container class="site-header__inner">
    <a class="site-header__brand" href="/">{brandLabel}</a>
    <div class="site-header__right">
      <PrimaryNav links={navLinks} />
      <ThemeToggle />
    </div>
  </Container>
</header>

<style>
.site-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: var(--color-overlay-glass);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid var(--color-border-subtle);
}

html[data-theme='dark'] .site-header {
  background: var(--color-overlay-glass);
  border-bottom: 1px solid var(--color-border-muted);
}

@media (prefers-color-scheme: dark) {
  :root:not([data-theme]) .site-header {
    background: var(--color-overlay-glass);
    border-bottom: 1px solid var(--color-border-muted);
  }
}

.site-header__inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-block: var(--space-md);
}

.site-header__right {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.site-header__brand {
  font-weight: 700;
  font-size: var(--font-size-lg);
  letter-spacing: -0.01em;
  color: var(--color-text-default);
}

@media (max-width: 720px) {
  .site-header__inner {
    flex-direction: column;
    gap: var(--space-md);
  }

  .site-header__right {
    width: 100%;
    justify-content: space-between;
  }
}
</style>
